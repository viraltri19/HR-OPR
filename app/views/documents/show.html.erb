<div class = 'col-lg-12'>
  <div class= 'card mt-5 mb-5'>
    <div class= 'card-body'>
      <h3 class= 'text-center'> Document details</h3>
    </div>
     </div>
<div class='row'>
  <div class = 'col-lg-12'>
    <div class= 'col-lg-8'>
        <p class= 'lead'><strong>Document Name:</strong> <%= @document.name%></p>
        <p class= 'lead'><strong>Type:</strong> <%= @document.doc_type%></p>
        <p class= 'lead'><strong>Employee Name:</strong> <%= @document.employee.name%></p><br>
        <div>
        <% if @document.image.attached? %>
          <p class= 'lead'><strong>Uploaded Doc:</strong></p>
          <%= image_tag @document.image %>
        <%end%>
        </div>
        <%=link_to 'Back To Documents' , documents_path , class: 'btn btn-outline-primary btn-lg' %>
        <%=link_to 'Edit Document' , edit_document_path(@document) , class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
</div>

        