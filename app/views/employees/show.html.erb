<div class = 'col-lg-12'>
  <div class= 'card mt-5 mb-5'>
    <div class= 'card-body'>
      <h3 class= 'text-center'> Employee details</h3>
    </div>
     </div>
<div class='row'>
  <div class = 'col-lg-8'>
    <div class= 'col-lg-3'>
      <h4>Personal Information:</h4>
          <p class= 'lead'><strong>Name:</strong> <%= @employee.name%></p>
          <p class= 'lead'><strong>Email:</strong> <%= @employee.personal_email%></p>
          <p class= 'lead'><strong>Phone Number:</strong> <%= @employee.phone_number%></p>
    </div>
    <div class= 'col-lg-3'>
      <h4>Address Information:</h4>
        <p class= 'lead'><strong>City:</strong> <%= @employee.city%></p>
        <p class= 'lead'><strong>Pincode:</strong> <%= @employee.pincode%></p>
        <p class= 'lead'><strong>State:</strong> <%= @employee.state%></p>
        <p class= 'lead'><strong>Country:</strong> <%= @employee.country.present? ? @employee.country : '--NA--' %></p>
      </div>
        <%=link_to 'Edit Employee' , edit_employee_path(@employee) , class: 'btn btn-primary btn-lg' %>
        <%=link_to 'Back To Employees' , employees_path , class: 'btn btn-outline-primary btn-lg' %>
      <div class= 'col-lg-4'>
          <h4>Document Information:</h4>
      </div>
  </div>
</div>
</div>
